{
    "name": "chat-api/whatsapp-backend",
    "description": "API RESTful para sistema de chat WhatsApp usando API Serpro - v1",
    "type": "project",
    "version": "1.0.0",
    "keywords": ["api", "whatsapp", "chat", "rest", "serpro", "v1"],
    "require": {
        "php": ">=7.4 || ^8.0",
        "firebase/php-jwt": "^6.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4.33"
        },
        "sort-packages": true
    },
    "authors": [
        {
            "name": "Chat API Developer",
            "email": "developer@example.com"
        }
    ],
    "extra": {
        "api-version": "v1",
        "api-description": "WhatsApp Chat API com prefixo v1 para versionamento"
    }
}